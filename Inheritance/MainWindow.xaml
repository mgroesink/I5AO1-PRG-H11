<Window x:Class="Inheritance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inheritance"
        mc:Ignorable="d"
        Name="main"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Name="drawingCanvas" HorizontalAlignment="Left" Height="254" Margin="0,57,0,0" Background="DarkGray" VerticalAlignment="Top" Width="{Binding ElementName=main , Path=Width}"/>
        <Button x:Name="addBubble" Content="Add bubble" HorizontalAlignment="Left" Margin="9,8,0,0" VerticalAlignment="Top" Width="75" Click="addBubble_Click"/>
        <Button x:Name="addBall" Content="Add Ball" HorizontalAlignment="Left" Margin="99,8,0,0" VerticalAlignment="Top" Width="75" Click="addBall_Click"/>

    </Grid>
</Window>
